<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DatePickerTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDatePickerTextViewText</item>
        <item name="android:padding">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/round_text_view_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundedButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
