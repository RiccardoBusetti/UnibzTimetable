<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LanguageCenterTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorLanguageCenter</item>
        <item name="colorPrimaryDark">@color/colorLanguageCenterDark</item>
        <item name="colorAccent">@color/colorLanguageCenter</item>
    </style>

    <style name="ComputerScienceTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorComputerScience</item>
        <item name="colorPrimaryDark">@color/colorComputerScienceDark</item>
        <item name="colorAccent">@color/colorComputerScience</item>
    </style>

    <style name="EconomicsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorEconomics</item>
        <item name="colorPrimaryDark">@color/colorEconomicsDark</item>
        <item name="colorAccent">@color/colorEconomics</item>
    </style>

    <style name="EducationTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorEducation</item>
        <item name="colorPrimaryDark">@color/colorEducationDark</item>
        <item name="colorAccent">@color/colorEducation</item>
    </style>

    <style name="DesignTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorDesign</item>
        <item name="colorPrimaryDark">@color/colorDesignDark</item>
        <item name="colorAccent">@color/colorDesign</item>
    </style>

    <style name="ScienceTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorScience</item>
        <item name="colorPrimaryDark">@color/colorScienceDark</item>
        <item name="colorAccent">@color/colorScience</item>
    </style>

    <style name="StudiumTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorStudium</item>
        <item name="colorPrimaryDark">@color/colorStudiumDark</item>
        <item name="colorAccent">@color/colorStudium</item>
    </style>

    <style name="DatePickerTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDatePickerTextViewText</item>
        <item name="android:padding">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/round_text_view_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundedButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
