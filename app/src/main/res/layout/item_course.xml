<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_course_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="?attr/colorPrimary"
            android:ellipsize="marquee"
            android:singleLine="true"
            tools:text="BZ C2.01" />

        <TextView
            android:id="@+id/item_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/item_course_location"
            android:layout_toStartOf="@id/item_course_professor"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="@color/colorBlack87"
            android:ellipsize="marquee"
            android:singleLine="true"
            tools:text="10:00 - 12:00" />

        <TextView
            android:id="@+id/item_course_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="@color/colorGrey"
            android:textSize="14sp"
            android:ellipsize="marquee"
            android:singleLine="true"
            tools:text="Bruno Carpenteri" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_course_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/colorBlack87"
        android:textSize="16sp"
        tools:text="Mathematics I" />

    <TextView
        android:id="@+id/item_course_type"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSecondary"
        android:textColor="@color/colorGrey"
        android:textSize="14sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        tools:text="Lecture" />

</LinearLayout>