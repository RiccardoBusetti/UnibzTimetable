<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_time_machine_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.riccardobusetti.unibztimetable.utils.custom.views.StatusView
        android:id="@+id/fragment_time_machine_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_time_machine_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_margin="16dp"
        android:src="@drawable/ic_calendar_search"
        app:tint="@color/colorWhite" />

</RelativeLayout>