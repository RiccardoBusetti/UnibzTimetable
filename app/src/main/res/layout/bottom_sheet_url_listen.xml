<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/bottom_sheet_url_listen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/waiting_for_url"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorBlack"
        tools:text="@string/waiting_for_url" />

    <ProgressBar
        android:id="@+id/bottom_sheet_url_listen_progress_bar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/bottom_sheet_url_listen_title"
        android:layout_centerHorizontal="true" />

</RelativeLayout>